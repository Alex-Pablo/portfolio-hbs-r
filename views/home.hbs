    <div class="hero-content">
        <div class="hero-text">
            <h1>Hola, me llamo <span class="highlight">{{name}}</span></h1>
            <h2>{{role}}</h2>
            <p>{{description}}</p>
            <div class="hero-buttons">
                <a href="/contact" class="btn primary">Empezemos</a>
                <a href="/projects" class="btn secondary">Ver projectos</a>
            </div>
        </div>
        <div class="hero-image">
            <img class="dev-img" src="/images/dev.svg" alt="Developer illustration">
        </div>
    </div>
</section>

